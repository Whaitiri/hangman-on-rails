<p id="notice"><%= notice %></p>
<h1>New Game</h1>

<% if @player.errors.any? %>
  <div id="error_explanation">
    <h4>
      <%= pluralize(@player.errors.count, "error") %> prohibited
      this player from being saved:
    </h4>
    <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div style="display: flex; width: 85%; margin: 0 auto">
  <div style="float: left; padding-right: 10px; flex: 1 1 auto">
    <%= form_for @game, url: {action: "create"}, html: {class: 'game_form'} do |f| %>
      <%= f.label "Enter name of new player" %>
      <%= text_field_tag 'name' %>
      <%= f.hidden_field :id %>
      <%= f.hidden_field :new_player, :value => true %>
      <%= f.submit "Start Game" %>
    <% end %>
  </div>
  <div style="flex: 1 1 auto">
     or
  </div>
  <div style="float: right; padding-left: 10px; flex: 1 1 auto">
    <%= form_for @game, url: {action: "create"}, html: {class: 'game_form'} do |f| %>
      <%= f.label "Select an existing player" %>
      <%= select_tag(:player_id, options_for_select(@players_array)) %>
      <%= f.hidden_field :id %>
      <%= f.hidden_field :new_player, :value => false %>
      <%= f.submit "Start Game" %>
    <% end %>
  </div>
</div>

<%= link_to 'Back', games_path %>
